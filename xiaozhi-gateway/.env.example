# 小智AI WebSocket服务配置
XIAOZHI_SERVER_URL=wss://api.tenclass.net/xiaozhi/v1/
XIAOZHI_ACCESS_TOKEN=your_access_token_here
XIAOZHI_DEVICE_ID=your_device_id_here
XIAOZHI_CLIENT_ID=your_client_id_here

# 服务器配置
PORT=3000
NODE_ENV=development

# TTS配置
TTS_STORAGE=memory
# TTS_STORAGE=file
TTS_MAX_AGE=300000
TTS_BASE_URL=http://localhost:3000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/gateway.log

# 音频配置
OPUS_SAMPLE_RATE=16000
OPUS_CHANNELS=1
OPUS_FRAME_SIZE=960

# 会话配置
SESSION_TIMEOUT=600000
MAX_SESSIONS=1000